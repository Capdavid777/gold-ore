{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",

    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "types": ["node", "react", "react-dom"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["next-env.d.ts", "src/**/*", "next.config.mjs"],
  "exclude": ["node_modules"]
}
